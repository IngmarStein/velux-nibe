#!/bin/sh

VELUX_NIBE_CONFIG="${SYNOPKG_PKGDEST}/velux-nibe.conf"
cat > "${VELUX_NIBE_CONFIG}" <<EOF
export VELUX_USERNAME=${VELUX_USERNAME}
export VELUX_PASSWORD=${VELUX_PASSWORD}
export NIBE_CLIENT_ID=${NIBE_CLIENT_ID}
export NIBE_CLIENT_SECRET=${NIBE_CLIENT_SECRET}
export NIBE_CALLBACK_URL=${NIBE_CALLBACK_URL}
export NIBE_SYSTEM_ID=${NIBE_SYSTEM_ID}
export NIBE_TOKEN=${NIBE_TOKEN}
export TARGET_TEMP=${TARGET_TEMP}
export POLL_INTERVAL=${POLL_INTERVAL}
EOF

exit 0
