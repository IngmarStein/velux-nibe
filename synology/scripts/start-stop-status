#!/bin/bash
case "$1" in
start)
  synosystemctl start pkgctl-velux-nibe
  ;;
stop)
  synosystemctl stop pkgctl-velux-nibe
  ;;
status)
  synosystemctl get-active-status pkgctl-velux-nibe
  ;;
log)
  exec tail -n 100 -f "/var/packages/velux-nibe/target/velux-nibe.log"
  ;;
*)
  echo "Usage: $0 {start|stop|status}" >&2
  exit 1
  ;;
esac
exit 0
